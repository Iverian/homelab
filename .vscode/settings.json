{
    "files.associations": {
        "*.yaml": "ansible",
        "*.yml": "ansible",
        "*.yaml.j2": "jinja-yaml",
        "*.yml.j2": "jinja-yaml",
        "hosts": "ini"
    },
    "python.linting.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "3d/**/*.py",
    ],
    "ansible.ansibleLint.enabled": true,
    "python.terminal.activateEnvironment": false,
    "ansible.python.activationScript": "activate.sh",
    "ansible.ansibleNavigator.path": "ansible-navigator",
    "ansible.python.interpreterPath": "python3",
    "ansibleServer.trace.server": "off",
    "ansibleVault.keyfile": ".vault-pass",
    "editor.tabSize": 2
}
