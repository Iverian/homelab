---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  namespace: "{{ k8s_postgresql_namespace }}"
  name: postgresql-backup-target
spec:
  storageClassName: "{{ k8s_postgresql_backup_sc }}"
  resources:
    requests:
      storage: 8Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
